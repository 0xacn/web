{
	"firestore": {
		"rules": "rules/firestore.rules",
		"indexes": "firestore.indexes.json"
	},
	"functions": {
		"predeploy": [
			"npm run lint -C \"$RESOURCE_DIR\"",
			"npm test -C \"$RESOURCE_DIR\""
		]
	},
	"hosting": {
		"public": "public/build",
		"ignore": [
			"firebase.json",
			"**/.*",
			"**/node_modules/**"
		]
	},
	"storage": {
		"rules": "rules/storage.rules"
	}
}
