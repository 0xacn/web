{
	"firestore": {
		"rules": "rules/firestore.rules",
		"indexes": "firestore.indexes.json"
	},
	"functions": {
		"predeploy": [
			"npm run lint -C \"$RESOURCE_DIR\"",
			"npm test -C \"$RESOURCE_DIR\""
		]
	},
	"hosting": {
		"public": "blank",
		"ignore": [
			"firebase.json",
			"**/.*",
			"**/node_modules/**"
		],
		"rewrites": [
			{
				"source": "**",
				"function": "app"
			}
		]
	},
	"storage": {
		"rules": "rules/storage.rules"
	}
}
