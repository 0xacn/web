{
	"firestore": {
		"rules": "rules/firestore.rules",
		"indexes": "firestore.indexes.json"
	},
	"functions": {
		"predeploy": [
			"npm run lint -C \"$RESOURCE_DIR\"",
			"npm test -C \"$RESOURCE_DIR\""
		]
	},
	"hosting": {
		"public": "public/build",
		"ignore": [
			"firebase.json",
			"**/.*",
			"**/node_modules/**"
		],
		"rewrites": [
			{
				"source": "**",
				"function": "app"
			}
		],
		"headers": [
			{
				"source": "**",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "max-age=86400"
					}
				]
			},
			{
				"source": "static/**",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "max-age=31536000"
					}
				]
			}
		]
	},
	"storage": {
		"rules": "rules/storage.rules"
	}
}
