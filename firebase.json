{
	"firestore": {
		"rules": "firestore.rules",
		"indexes": "firestore.indexes.json"
	},
	"functions": {
		"predeploy": [
			"npm --prefix \"$RESOURCE_DIR\" run lint"
		]
	},
	"hosting": {
		"public": "public",
		"ignore": [
			"firebase.json",
			"**/.*",
			"**/node_modules/**"
		],
		"rewrites": [
			{
				"source": "/api/all",
				"destination": "/api/all.js"
			},
			{
				"source": "/api/highlight",
				"destination": "/api/highlight.js"
			},
			{
				"source": "/sign-up",
				"destination": "/sign-up.html"
			},
			{
				"source": "/sign-in",
				"destination": "/sign-in.html"
			},
			{
				"source": "/ios-tutorial",
				"destination": "/ios-tutorial.html"
			},
			{
				"source": "/integrations",
				"destination": "/integrations.html"
			},
			{
				"source": "/privacy",
				"destination": "/privacy.html"
			},
			{
				"source": "/support",
				"destination": "/support.html"
			},
			{
				"source": "/admin",
				"destination": "/admin.html"
			},
			{
				"source": "**",
				"function": "app"
			}
		],
		"redirects": [
			{
				"source": "/index.html",
				"destination": "/"
			}
		]
	},
	"storage": [
		{
			"bucket": "memorize-ai.appspot.com",
			"rules": "storage/memorize-ai.appspot.com.rules"
		},
		{
			"bucket": "uploads.memorize.ai",
			"rules": "storage/uploads.memorize.ai.rules"
		}
	]
}