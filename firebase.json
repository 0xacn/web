{
	"firestore": {
		"rules": "firestore.rules",
		"indexes": "firestore.indexes.json"
	},
	"functions": {
		"predeploy": [
			"npm --prefix \"$RESOURCE_DIR\" run lint"
		]
	},
	"hosting": {
		"public": "public",
		"ignore": [
			"firebase.json",
			"**/.*",
			"**/node_modules/**"
		],
		"rewrites": [
			{
				"source": "/privacy",
				"destination": "/privacy.html"
			},
			{
				"source": "/support",
				"destination": "/support.html"
			},
			{
				"source": "**",
				"destination": "/index.html"
			}
		],
		"redirects": [
			{
				"source": "/privacy.html",
				"destination": "/privacy"
			},
			{
				"source": "/support.html",
				"destination": "/support"
			},
			{
				"source": "/index.html",
				"destination": "/"
			}
		]
	},
	"storage": {
		"rules": "storage.rules"
	}
}